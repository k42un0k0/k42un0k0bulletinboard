= form_for @response, data: { remote: true } do |f|
  = f.text_field :body, {}
  = f.select :board_id, options_for_select(Board.all.map{|s|[s.title, s.id]})
  - if @response.errors.any?
    #error_explanation
      %h2= "#{pluralize(@response.errors.count, "error")} prohibited this response from being saved:"
      %ul
        - @response.errors.full_messages.each do |message|
          %li= message

  .actions
    = f.submit 'Save'
